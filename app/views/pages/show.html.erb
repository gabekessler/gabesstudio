<% end -%>


<p><%= @page.pagetext  %></p>
<% if logged_in? %>
<%= link_to 'Edit', edit_page_path(@page) %>
<% end -%>

<script type="text/javascript" src="http://touchpapers.tumblr.com/js"></script>

</div><!--span-14 last-->